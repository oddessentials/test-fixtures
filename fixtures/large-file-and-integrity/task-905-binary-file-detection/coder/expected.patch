+import { isBinaryFile } from "./binaryDetector";
+
+export type FileType = "text" | "binary";
+
+export interface FileTypeInfo {
+  type: FileType;
+  canApplyTextOperations: boolean;
+  message: string;
+}
+
+export function getFileTypeInfo(buffer: Buffer): FileTypeInfo {
+  const isBinary = isBinaryFile(buffer);
+  return {
+    type: isBinary ? "binary" : "text",
+    canApplyTextOperations: !isBinary,
+    message: isBinary
+      ? "Binary file detected - text operations will be skipped"
+      : "Text file detected - text operations allowed",
+  };
+}
