+import { FORBIDDEN_PATHS } from "./forbiddenPaths";
+
+export interface PathViolation {
+  path: string;
+  matchedForbidden: string;
+  message: string;
+}
+
+export function checkForbiddenPath(path: string): PathViolation | null {
+  for (const forbidden of FORBIDDEN_PATHS) {
+    if (path.startsWith(forbidden) || path.includes(`/${forbidden}`)) {
+      return {
+        path,
+        matchedForbidden: forbidden,
+        message: `Path "${path}" is forbidden: matches "${forbidden}"`,
+      };
+    }
+  }
+  return null;
+}
