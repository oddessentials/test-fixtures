+import { normalizePath } from "./pathNormalizer";
+
+export interface EdgeCaseResult {
+  isValid: boolean;
+  normalizedPath: string;
+  warnings: string[];
+}
+
+export function handleEdgeCases(inputPath: string): EdgeCaseResult {
+  const warnings: string[] = [];
+
+  // Check for special characters that might cause issues
+  if (/[<>:"|?*]/.test(inputPath)) {
+    warnings.push("Path contains special characters that may not be portable");
+  }
+
+  // Check for potential symlink traversal
+  if (inputPath.includes("..")) {
+    warnings.push("Path contains parent directory references");
+  }
+
+  const normalizedPath = normalizePath(inputPath);
+
+  return { isValid: true, normalizedPath, warnings };
+}
