@@ -0,0 +1,10 @@
+-- Copy existing shipping data from orders to order_shipping
+-- This maintains data integrity during the compatibility window
+INSERT INTO order_shipping (order_id, address, city, zip, country)
+SELECT
+  id,
+  shipping_address,
+  shipping_city,
+  shipping_zip,
+  shipping_country
+FROM orders WHERE shipping_address IS NOT NULL;
