+import { ProductResponseV2 } from '../types/product';
+
+export async function getProductByIdV2(id: string): Promise<ProductResponseV2> {
+  const product = await fetchProductFromDb(id);
+  return {
+    id: product.id,
+    name: product.name,
+    priceInCents: product.priceInCents,
+    formattedPrice: formatPrice(product.priceInCents),
+  };
+}
+
+function formatPrice(cents: number): string {
+  return `$${(cents / 100).toFixed(2)}`;
+}
