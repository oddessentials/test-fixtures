+export interface FormatOptions {
+  prefix?: string;
+  suffix?: string;
+  uppercase?: boolean;
+}
+
+export function formatString(input: string, options: FormatOptions = {}): string {
+  let result = options.prefix ? options.prefix + input : input;
+  result = options.suffix ? result + options.suffix : result;
+  return options.uppercase ? result.toUpperCase() : result;
+}
